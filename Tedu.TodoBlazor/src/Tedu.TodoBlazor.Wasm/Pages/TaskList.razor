@page "/TaskList"
@using Tedu.TodoBlazor.Models.Enums
@using Tedu.TodoBlazor.Wasm.Components
@inject IConfiguration Configuration
<h3>Todo List</h3>

@if (Tasks == null)
{
    <LoadingIndicator></LoadingIndicator>
}
else
{
    <div class="row">
        <TaskSearch OnSearch="@SearchTask"></TaskSearch>
    </div>
    <div class="row mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Priority
                    </th>
                    <th>Assignee</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Tasks)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <PriorityLabel Priority="item.Priority"></PriorityLabel>
                        </td>
                        <td>@item.AssigneeName</td>
                        <td>@item.CreatedDate.ToString(Configuration["DateTimeFormat"])</td>
                        <td>
                            <StatusLabel Status="item.Status"></StatusLabel>
                        </td>
                        <td>
                            <a href="/taskDetails/@item.Id">Detail</a>
                            <a href="/taskEdit/@item.Id">Edit</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
