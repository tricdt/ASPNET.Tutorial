<header>
    <div class="header-container">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-xs-12">
                        <!-- Default Welcome Message -->
                        <div class="welcome-msg hidden-xs hidden-sm">Chào các bạn đã đến với Phụ kiện nữ - Khuyên tai xinh! </div>
                    </div>

                    <!-- top links -->
                    <div class="headerlinkmenu col-md-8 col-sm-8 col-xs-12">
                        <span class="phone  hidden-xs hidden-sm">Liên hệ: +0962 370 186</span>
                        <ul class="links">
                            <li><a title="Đặt hàng" href="/dat-hang.html"><span>Mua hàng</span></a></li>
                            @if (User.Identity.IsAuthenticated)
                            {

                                <li>
                                    <div class="dropdown">
                                        <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>@User.Identity.Name</span> <i class="fa fa-angle-down"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="/tai-khoan.html">Tài khoản</a></li>
                                            <li><a href="/san-pham-yeu-thich.html">Yêu thích</a></li>
                                            <li><a href="/don-hang-cua-toi.html">Đơn hàng của tôi</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                                        <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>Thoát</span></a>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a title="login" href="/dang-nhap.html"><span>Đăng nhập</span></a></li>
                                <li><a title="register" href="/dang-ky.html"><span>Đăng ký</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- header inner -->
        <div class="header-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 col-xs-12 jtv-logo-block">

                        <!-- Header Logo -->
                        <div class="logo"><a title="e-commerce" href="/"><img alt="Phụ kiện nữ - Khuyên tai xinh" title="Phụ kiện nữ - Khuyên tai xinh" height="120" src="/client-side/images/logo.png"></a> </div>
                    </div>
                    <div class="col-xs-12 col-sm-5 col-md-6 jtv-top-search">

                        <!-- Search -->

                        <div class="top-search">
                            <div id="search">
                                <form action="/tim-kiem.html" method="get">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Nhập tên hoặc mã sản phẩm..." name="keyword">
                                        <button class="btn-search" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- End Search -->
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3 top-cart">
                        <div class="link-wishlist"> <a href="/san-pham-yeu-thich.html"> <i class="icon-heart icons"></i><span> Yêu thích</span></a> </div>
                        <!-- top cart -->
                        <div class="top-cart-contain">
                            <div class="mini-cart">
                               @* @(await Component.InvokeAsync("HeaderCart")) *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>